<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="522dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="30dp">


        <TextView
            android:id="@+id/listNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/titlefonts"

            android:text="name"
            android:textColor="#6CBC2f"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/listDescriptionText"
            android:layout_width="321dp"
            android:layout_height="296dp"
            android:layout_below="@+id/listNameText"


            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="149dp"
            android:fontFamily="@font/montserrat"
            android:text="description"

            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/listTagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="397dp"
            android:text="tags"
            android:fontFamily="@font/montserrat"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/contactButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="145dp"
            android:layout_marginTop="453dp"
            android:text="Contact" />

    </RelativeLayout>


</LinearLayout>
